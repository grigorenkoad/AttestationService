@model AttestationService.ViewModels.LoginViewModel

@{
    ViewBag.Title = Resources.Resource.LogIn;
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <div class="item active">
        <div class="carousel-caption">
            <div class="form-signin" role="form">
                @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <h2 class="form-signin-heading">
                        @ViewBag.Title
                    </h2>

                    @Html.TextBoxFor(m => m.Login, new { @class = "form-control", placeholder = @Resources.Resource.UserName })
                    @Html.ValidationMessageFor(m => m.Login)

                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = @Resources.Resource.Password })
                    @Html.ValidationMessageFor(m => m.Password)

                    <div class="form-inline">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                    </div>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">@Resources.Resource.LogIn</button>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
